<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wj5633.ch04.mapper.RolePrivilegeMapper">
    <resultMap id="rolePrivilegeMap" type="com.wj5633.ch04.model.SysRolePrivilege">
        <id property="id" column="id"/>
    </resultMap>

    <select id="selectById" resultMap="rolePrivilegeMap">
        select *
        from sys_role_privilege
        where role_id = #{id}
    </select>
</mapper>